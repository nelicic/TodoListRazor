@page "/"
@using TodoListRazor.Models
@using TodoListRazor.Pages.Todo
@model IndexModel

@{
	ViewData["Title"] = "TodoList";
}

<h3>Todo List</h3>

<div class="row"> 
	<div class="col-2 mx-auto mb-3">
		<a asp-page="Create" class="btn btn-primary"  >Add New Task</a>
	</div>
</div>


@foreach (var item in Model.TodoTask)
{
	<div class="d-flex text-white mb-5">
		<div class="mt-4 me-3">
			<form method="post">
				<input type="submit" asp-route-id="@item.Id" class="btn btn-outline-success" id="done" value="Done">
			</form>
		</div>
		<div class="container-lg bg-dark rounded-3">
			<div class="row mt-2">
				<div class="col-3"> 
					<h3>@item.Name</h3>
				</div>
				<div class="col-1 text-center">
					<h3>@item.Importance</h3>
				</div>
				<div class="col-2 offset-5 text-center">
					<p class="mt-2">Created: @item.CreatedDate.ToShortDateString()</p>
				</div>
			</div>
			<div class="row">
				<div class="col-9"> 
					<p class="fs-5">@item.Description</p>
				</div>
				<div class="col-2 text-center">
					<p class="mt-2">Deadline: @item.DeadLine.ToShortDateString()</p>
				</div>
			</div>
		</div>
		<div class="ms-3">
			<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary ms-2">Edit</a>
			<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger mt-3">Delete</a>
		</div>
	</div>
}


